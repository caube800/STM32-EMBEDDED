// ##################################################################
// ## 1. ĐỊNH NGHĨA BIẾN VÀ HẰNG SỐ (Private, static)
// ##################################################################

// --- Trạng thái Game (Game State) ---
// (static nghĩa là các biến này chỉ được dùng bên trong file .c này)
static int player_y;
static int player_anim_frame;
static int is_jumping;
static int jump_velocity;
static int ground_scroll;
static bool game_over;
static bool night;
static bool has_collided;
static int score;
static int hi_score = 0; // Giữ nguyên điểm HI
static int lives;
static int target_fps;
static int game_cycle_counter; // Đếm số tick

// --- Hằng số Game (Lấy từ .h cũ) ---
static const int gravity = 2;
static const int jump_initial_velocity = 12;
static const int ground_speed = 3;

#define PLAYER_SAFE_ZONE_WIDTH 32
#define SPAWN_NEW_LIVE_MIN_CYCLES 800
#define DAY_NIGHT_SWITCH_CYCLES 1000
// Bỏ qua việc tăng FPS động để đơn giản hóa API
//#define INCREASE_FPS_EVERY_N_SCORE_POINTS 200
#define LIVES_START 3
#define LIVES_MAX 5
// (TARGET_FPS_START được dời qua file .h)
#define TARGET_FPS_MAX 55
#define GROUND_Y 57
#define GROUND_CACTI_SCROLL_SPEED 3

// --- Cấu trúc dữ liệu ---
typedef struct {
    uint8_t x, y;
    uint8_t w, h;
    const uint8_t *bitmap;
    const uint8_t *mask;
} Cactus_t;

#define NUM_CACTI 5
static Cactus_t cacti[NUM_CACTI];

// ##################################################################
// ## 2. BITMAPS (Lấy từ file .c gốc của bạn)
// ##################################################################

